{
  "name": "fhevm-template-monorepo",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK with multi-framework support - Competition Submission",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "install:all": "npm install",
    "build:sdk": "npm run build --workspace=packages/fhevm-sdk",
    "build:examples": "npm run build --workspaces --if-present",
    "build": "npm run build:sdk && npm run build:examples",
    "dev:nextjs": "npm run dev --workspace=examples/nextjs-example",
    "dev:react": "npm run dev --workspace=examples/react-example",
    "dev:vue": "npm run dev --workspace=examples/vue-example",
    "dev:digital-court": "npm run dev --workspace=examples/digital-court-example",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "compile:contracts": "npm run compile --workspace=packages/fhevm-sdk",
    "deploy:local": "npm run deploy:local --workspace=packages/fhevm-sdk"
  },
  "keywords": [
    "fhevm",
    "fully-homomorphic-encryption",
    "ethereum",
    "privacy",
    "sdk",
    "blockchain",
    "confidential-computing",
    "zama"
  ],
  "author": "FHEVM SDK Team",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0",
    "prettier": "^3.1.1"
  }
}
